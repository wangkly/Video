<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MagnetActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/magnetInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left|top"
            android:maxLines="10"
            android:minLines="8"
            android:scrollbars="vertical"
            android:background="@drawable/edit_input_bg"
            />


    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/action_analysis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/magnetInputLayout"
        android:background="@drawable/btn_bg_corner"/>




</androidx.constraintlayout.widget.ConstraintLayout>